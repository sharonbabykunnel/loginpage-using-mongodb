<link rel="stylesheet" href="https://mdbcdn.b-cdn.net/wp-content/themes/mdbootstrap4/docs-app/css/dist/mdb5/standard/core.min.css"> 
<link rel="stylesheet" id="roboto-subset.css-css" href="https://mdbcdn.b-cdn.net/wp-content/themes/mdbootstrap4/docs-app/css/mdb5/fonts/roboto-subset.css?ver=3.9.0-update.5" type="text/css" media="all">
<link rel="shortcut icon" href="https://mdbcdn.b-cdn.net/wp-content/themes/mdbootstrap4/favicon.ico"> 
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

<style>
    body{
     margin: 1em;
    }
    th{
        padding: 5px;
    }
    td{
        padding: 10px;
    }
</style>
<h1 class="m-lg-5">dashboard</h1>

<div class="d-flex align-items-center justify-content-center pb-4">
    <p class="mb-0 me-2"></p>
    <button type="button" class="btn btn-primary " onclick="location.href = '/admin/new-user'" class="btn btn-outline-danger">Create new user</button>
  </div>

<form action="" class="m-lg-4">
    <input type="text" placeholder="Search user Name, email,Mobile" name="search">
    <input type="submit" value="search">
</form>

    <%
    if(users.length > 0){
        %>
        <table style="width: 50%; margin: 1em;">

            <th>name</th>
            <th>email</th>
            <th>mobile No.</th>
            <th>image</th>
            <th>verified</th>
            <% 
        for(let i=0; i<users.length; i++){
        %>

    <tr>
        <td><%= users[i].name %></td>
        <td><%= users[i].email %></td>
        <td><%= users[i].mobile %></td>
        
        <td><img src="/userImages/<%= users[i].image %>" alt="User image" width="50px" height="50px" ></td>
        <td><%
            if(users[i].is_varified == 0){
             %>
             <p>Not verified</p>  
             <% 
            }else{
            %>
            <p>verified</p>
            <%
            }
            %>
        </td>
        <td><button class="btn btn-primary " tabindex="-1" role="button" aria-disabled=""><a href="/admin/edit-user?id=<%= users[i]._id%>" class="btn btn-primary " tabindex="1" role="" aria-disabled="">Edit</a></button></td>
        <td><button class="btn btn-primary " tabindex="1" role="" aria-disabled=""><a href="/admin/delete-user?id=<%= users[i]._id%>" class="btn btn-primary" tabindex="-1" role="button" aria-disabled="true">
            delete
        </a></button></td>
    </tr>
   <%    }
    }else{
    %>
    <p>No user Data</p>
    <%
    }
    %>
</table>


<a href="/admin/home" class="btn btn-primary m-lg-4" tabindex="-1" role="button" aria-disabled="true">Go Back to Home</a>

