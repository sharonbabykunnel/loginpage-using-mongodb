<h1>Add New User</h1>

<form  method="post" action="" enctype="multipart/form-data">
    <p>Please SignUp  your account</p>
    

    <div class="form-outline mb-4">
      <input type="text" required id="form2Example00" class="form-control"
        placeholder="Name" name="name"/>
      <label class="form-label" for="form2Example11">Username</label>
    </div>

    <div class="form-outline mb-4">
      <input type="email" required id="form2Example11" class="form-control"
        placeholder="Email address" name="email"/>
      <label class="form-label" for="form2Example11">Email</label>
    </div>

    <div class="form-outline mb-4">
      <input type="file" required id="form2Example22" class="form-control" name="image"/>
      <label class="form-label" for="form2Example22">Profile Photo</label>
    </div>
    
    <div class="form-outline mb-4">
      <input type="number" required id="form2Example33" class="form-control" name="mobile"/>
      <label class="form-label" for="form2Example22">Mobile No.</label>
    </div>

    <div class="form-outline mb-4">
      <input type="password" required id="form2Example" class="form-control" name="password"/>
      <label class="form-label" for="form2Example22">Password</label>
    </div>

    <div class="text-center pt-1 mb-5 pb-1">
     
        <input type="submit"  value="Add User">
    </div>
    
    <div class="d-flex align-items-center justify-content-center pb-4">
      <p class="mb-0 me-2"></p>
      <button type="button" class="btn btn-primary " onclick="location.href = '/admin/dashboard'" class="btn btn-outline-danger">back to dashboard</button>
    </div>


  </form>
  <%
  if(typeof message!== "undefined"){
    %>
    <p style="color:green"><%= message %></p>
    <%
}
%>

