    <div>
        <label for="verify">verify</label>
        <input type="radio" name="verify" value="1" <% if(user.is_varified == 1 ){ %> checked <% } %> >
        <label for="unverify">unverify</label>
        <input type="radio" name="verify" value="0" <% if(user.is_varified == 0){ %> checked <%}%> >
    </div>
   
   <input type="hidden" name="id" value="<%= user._id %>">

    <div class="text-center pt-1 mb-5 pb-1">
     
        <input type="submit"  value="update user">
    </div>
    
    <div class="d-flex align-items-center justify-content-center pb-4">
      <p class="mb-0 me-2"></p>
      <button type="button" class="btn btn-primary " onclick="location.href = '/admin/dashboard'" class="btn btn-outline-danger">back to dashboard</button>
    </div>


  </form>
