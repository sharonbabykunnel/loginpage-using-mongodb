<h1>Edit User</h1>

<form  method="post" action="" >
    <p>Please SignUp  your account</p>
    

    <div class="form-outline mb-4">
      <label class="form-label" for="form2Example11">Username</label>
      <input type="text"  id="form2Example00" class="form-control" value="<%=user.name%>"
      required placeholder="Name" name="name"/>

    </div>
    
    <div class="form-outline mb-4">
      <label class="form-label" for="form2Example22">Mobile No.</label>
        <input type="number" required id="form2Example33" class="form-control" value="<%=user.mobile%>"
        required name="mobile"/>

      </div>

