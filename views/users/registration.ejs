    <section class="h-100 gradient-form" style="background-color: #eee;">
        <div class="container py-5 h-100">
          <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10">
              <div class="card rounded-3 text-black">
                <div class="row g-0">

                  <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
                    <div class=" px-3 py-4 p-md-5 mx-md-4">
                      <h4 class="mb-4">We are more than just a company</h4>
                      <p class="small mb-0">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
                        tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud
                        exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
                    </div>
                  </div>
                  <div class="col-lg-6">
                    <div class="card-body p-md-5 mx-md-4">
      
                      <div class="text-center">
                        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/lotus.webp"
                          style="width: 185px;" alt="logo">
                        <h4 class="mt-1 mb-5 pb-1">We are The Lotus Team</h4>
                      </div>
      
                      <form  method="post" action="/register" enctype="multipart/form-data">
                        <p>Please SignUp  your account</p>
                        

                        <div class="form-outline mb-4">
                          <input type="text" required id="form2Example00" class="form-control"
                            placeholder="Name" name="name"/>
                          <label class="form-label" for="form2Example11">Username</label>
                        </div>
      
                        <div class="form-outline mb-4">
                          <input type="email" required id="form2Example11" class="form-control"
                            placeholder="Email address" name="email"/>
                          <label class="form-label" for="form2Example11">Email</label>
                        </div>
      
                        <div class="form-outline mb-4">
                          <input type="file" required id="form2Example22" class="form-control" name="image"/>
                          <label class="form-label" for="form2Example22">Profile Photo</label>
                        </div>
                        
                        <div class="form-outline mb-4">
                          <input type="number" required id="form2Example33" class="" name="mobile"/>
                          <label class="form-label" for="form2Example22">Mobile No.</label>
                        </div>

                        <div class="form-outline mb-4">
                          <input type="password" required id="form2Example" class="form-control" name="password"/>
                          <label class="form-label" for="form2Example22">Password</label>
                        </div>

                        <div class="text-center pt-1 mb-5 pb-1">
                         
                            <input type="submit"  value="register">
                        </div>
                        
                        <div class="d-flex align-items-center justify-content-center pb-4">
                          <p class="mb-0 me-2">Do you want to login?</p>
                          <button type="button" onclick="location.href = '/'" class="btn btn-outline-danger">back to login Page</button>
                        </div>


                      </form>
                      <%
                      if(typeof message!== "undefined"){
                        %>
                        <p style="color:green"><%= message %></p>
                        <%
                    }
                    %>
      
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>



